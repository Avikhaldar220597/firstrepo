<script>
const db = { clothes: [], books: [], other: [] };
const pageHome = document.getElementById('pageHome');
const pageDonate = document.getElementById('pageDonate');
const pageClothes = document.getElementById('pageClothes');
const pageBooks = document.getElementById('pageBooks');
const pageOther = document.getElementById('pageOther');

function hideAll(){ [pageHome,pageDonate,pageClothes,pageBooks,pageOther].forEach(p=>p.style.display='none'); }
function goHome(){ hideAll(); pageHome.style.display='block'; }
function showDonate(){ hideAll(); pageDonate.style.display='block'; }
function showCategory(cat){ hideAll(); const id='page'+cap(cat); const el=document.getElementById(id); if(el) el.style.display='block'; render(cat); }
function cap(s){ return s.charAt(0).toUpperCase()+s.slice(1); }
function addDonation(e){ e.preventDefault(); const f=document.getElementById('firstName').value.trim(); const l=document.getElementById('lastName').value.trim(); const emailId=document.getElementById('email').value.trim(); const contactNum=document.getElementById('contact').value.trim(); const t=document.getElementById('donationType').value; const item=document.getElementById('itemName').value.trim(); const img=document.getElementById('imgUrl').value.trim()||'https://via.placeholder.com/300'; if(!t||!item){ alert('Please choose a category and provide an item name.'); return; } db[t].push({donor:`${f} ${l}`,emailId,contactNum,item,img}); document.getElementById('firstName').value=''; document.getElementById('lastName').value=''; document.getElementById('email').value=''; document.getElementById('contact').value=''; document.getElementById('donationType').value=''; document.getElementById('itemName').value=''; document.getElementById('imgUrl').value=''; alert('Thank you for donating!'); goHome(); }
function render(cat){ const wrap=document.getElementById(cat+'List'); if(!wrap)return; wrap.innerHTML=''; db[cat].forEach(d=>{ const div=document.createElement('div'); div.className='itemCard'; div.innerHTML=`<img src="${d.img}" alt="${escapeHtml(d.item)}" /><h4>${escapeHtml(d.item)}</h4><p>By: ${escapeHtml(d.donor)}</p>`; wrap.appendChild(div); });}
function escapeHtml(s){ return String(s).replace(/[&<>\"']/g,c=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c])); }
goHome();
</script>
